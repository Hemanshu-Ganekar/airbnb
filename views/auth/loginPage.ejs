<%-include('../partials/head')%>
    <title>Login</title>
</head>
<body class="flex items-center justify-center bg-slate-100 h-[100vh] font-sans">
       <% if (error && error.length) { %>
          <div id="error-popup" class="fixed top-8 left-1/2 transform -translate-x-1/2 bg-red-100 border border-red-400 text-red-700 px-6 py-4 rounded-lg shadow-lg z-50 w-96">
            <div class="flex justify-between items-center mb-2">
              <span class="font-bold">Please fix the following errors:</span>
              <button onclick="document.getElementById('error-popup').style.display='none'" class="text-red-700 font-bold text-xl">&times;</button>
            </div>
            <ul class="list-disc pl-5">
              <% error.forEach(function(msg) { %>
                <li><%= msg %></li>
              <% }) %>
            </ul>
          </div>
        <% } %>
  <form class="bg-white shadow-lg rounded-2xl p-8 w-96" action="/auth/login" method="post">
    <h1 class="text-2xl font-semibold text-gray-800 mb-6 text-center">Log in</h1>
    
    <div class="mb-4">
      <label for="email" class="block text-gray-700 font-medium mb-1">Email</label>
      <input type="email" id="email" name="email" placeholder="Enter your email" required
      value="<%= oldInput.email ? oldInput.email : '' %>"
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-red-500 focus:outline-none">
    </div>
    
    <div class="mb-4">
      <label for="password" class="block text-gray-700 font-medium mb-1">Password</label>
      <input type="password" id="password" name="password" placeholder="Enter your password" required
        value="<%= oldInput.password ? oldInput.password : '' %>"
        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-red-500 focus:outline-none">
    </div>
    
    <button type="submit"
      class="w-full bg-red-500 hover:bg-red-600 text-white font-medium py-2 rounded-lg transition duration-200">
      Login
    </button>
    
    <p class="text-sm text-gray-600 mt-4 text-center">
      Donâ€™t have an account? 
      <a href="/auth/signup" class="text-red-500 font-medium hover:underline">Sign up</a>
    </p>
  </form>

</body>
</html>
