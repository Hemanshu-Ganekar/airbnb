<%- include('../partials/head')%>
  <title>airbnb Home</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

</head>
<body class="bg-gray-50 min-h-screen font-sans">
 <%-include('../partials/nav')%>

<main class="mt-10 w-full flex flex-col items-center">
  <div class="w-full max-w-5xl px-6">
    <h1 class="text-3xl font-bold text-gray-800 mb-6"><%= homeFound.houseName %></h1>

    <!-- Featured image -->
    <img src="<%= homeFound.Photo %>" alt="<%= homeFound.houseName %>" class="w-full h-[500px] object-cover rounded-xl mb-8">

    <!-- Price -->
    <div class="text-2xl font-semibold text-red-500 mb-4">
      â‚¹<%= homeFound.pricePerNight %> / night
    </div>

    <!-- Book Button -->
    <form action="/bookings" method="post">
        <input type="hidden" name="id" value="<%= homeFound.id %>">
       <button class="inline-block bg-red-400 hover:bg-red-500 text-white font-semibold px-8 py-3 rounded-lg shadow transition">
       Book Now
       </button>
    </form>
<%- include('../partials/favourite')%>
     
    <!-- Location -->
    
    <div class="text-gray-600 mb-4 mt-4">
       <h1
       class="text-red-400 text-4xl"
       >
      <i class="fa-solid fa-location-dot text-red-400 mr-2"></i>

      Location:
     </h1>
    <div class="text-2xl">
      <%= homeFound.location %>

    </div>
    </div>

    <!-- Rating -->
    <div class="flex items-center text-yellow-500 text-3xl mb-6">
      <% for(let i=0; i<Math.floor(homeFound.Rating); i++){ %>
        <i class="fa-solid fa-star"></i>
      <% } %>
      <% if(homeFound.Rating % 1 !== 0){ %>
        <i class="fa-solid fa-star-half-alt"></i>
      <% } %>
      <span class="ml-2 text-gray-700"><%= homeFound.Rating %> / 5</span>
    </div>
  <div class="p-6 bg-white rounded-2xl shadow-lg border border-gray-200">
  <h2 class="text-xl font-semibold text-gray-800 mb-3">
    Description
  </h2>
  <p class="text-gray-600 leading-relaxed">
    <%= homeFound.description %>
  </p>
</div>

  </div>
</main>


  <footer class="mt-16 py-6 bg-gray-100 text-center text-gray-500 text-sm border-t">
    &copy; <%= new Date().getFullYear() %> airbnb. All rights reserved.
  </footer>
</body>

</html>
