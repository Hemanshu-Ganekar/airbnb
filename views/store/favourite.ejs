<%- include('../partials/head')%>
  <title>airbnb Home</title>
</head>

<body class="bg-gray-50 min-h-screen font-sans">
  

 <%-include('../partials/nav')%>


  <main class="mt-10 w-full flex flex-col items-center">
    <div class="w-full max-w-5xl">
      <h1 class="text-3xl text-center text-red-500 font-bold mb-8">Your Favourites</h1>
        <% if(favHomes.length>0){ %>
         
      <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8 px-4">

        <% favHomes.forEach(function(home){ %>

          <li
            class="bg-white shadow-md rounded-2xl overflow-hidden hover:shadow-xl transition-shadow duration-300 w-80">

            <!-- Image -->
            <div class="relative h-56 w-full">
              <img src="<%=home.Photo %>" alt="<%= home.homeName %>" class="h-full w-full object-cover">

              <!-- favourite -->
              <form action="/deleteFavourite" method="post"> 
              <button
               class="absolute cursor-pointer top-2 right-2 bg-white  rounded-lg px-3 py-1 text-lg font-bold text-red-700 shadow opacity-70 hover:opacity-100 hover:bg-white "
               >
               &cross;
               </button>
               <input type="hidden" name="id" value="<%= home._id %>">
               
              </form>
              <!-- Price badge -->
              <div
                class="absolute bottom-2 right-2 bg-white rounded-lg px-3 py-1 text-sm font-bold text-gray-800 shadow">
                $<%= home.pricePerNight %> / night
              </div>
            </div>

            <!-- Content -->
            <div class="p-4 flex flex-col gap-2">
              <div class="flex justify-between items-center">
                <h3 class="text-lg font-semibold text-gray-900 truncate">
                  <%= home.houseName %>
                </h3>
                <span class="flex items-center text-sm text-gray-600">
                  <%= home.Rating %> â˜…
                </span>
              </div>
              <p class="text-sm text-gray-500 line-clamp-2">
                <%= home.location %>
              </p>

              <!-- Button -->
               <a href="/home/<%= home._id %>">
              <button class="mt-3 bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-600 transition">
                View Details
              </button>
               </a>
            </div>

          </li>

          <% }) %>
      </ul>
<% }else{%>
            <div class="flex flex-col items-center  justify-center py-20">
    <!-- Icon -->
    <svg xmlns="http://www.w3.org/2000/svg" 
         class="h-16 w-16 text-gray-400 mb-4" 
         fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
        d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 
           4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 
           4.5 0 00-6.364 0z" />
    </svg>

    <!-- Message -->
    <h2 class="text-xl font-semibold text-gray-700 mb-2">
      No favourites yet
    </h2>
    <p class="text-gray-500 text-center max-w-sm">
      When you heart a home, it will appear here.
    </p>
  </div>
            <% } %>

    </div>
  </main>
  <footer class="mt-16 py-6 bg-gray-100 text-center text-gray-500 text-sm border-t">
    &copy; <%= new Date().getFullYear() %> airbnb. All rights reserved.
  </footer>
</body>

</html>